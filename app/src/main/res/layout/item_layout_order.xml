<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_3sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    android:elevation="@dimen/_2sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#EFEFEF"
            android:padding="@dimen/_2sdp"
            android:elevation="@dimen/_2sdp"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Order ID"
                android:textColor="@color/txtBlack"
                android:layout_weight="1"
                android:fontFamily="@font/cairo"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#EFEFEF"
            android:padding="@dimen/_2sdp"
            android:elevation="@dimen/_2sdp"
            android:weightSum="1">

            <TextView
                android:id="@+id/text_order_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="#7719fs898dkk"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                android:fontFamily="@font/cairo"
                android:textSize="@dimen/_10ssp"/>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_75sdp"
            android:layout_marginTop="@dimen/_2sdp"
            >

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="@dimen/_75sdp"
                android:layout_height="@dimen/_75sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_2"/>

            <TextView
                android:id="@+id/text_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/product_image"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Product Name: Dummy Name"
                android:textColor="@color/txtBlack"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/cairo"
                android:layout_margin="@dimen/_5sdp"/>

            <TextView
                android:id="@+id/text_product_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/product_image"
                android:text="Price: 20"
                android:textColor="@color/txtBlack"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/cairo"
                android:layout_below="@+id/text_product_name"
                android:layout_marginStart="@dimen/_5sdp"/>

            <TextView
                android:id="@+id/text_order_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/product_image"
                android:text="Date: 20/20/2020"
                android:textColor="@color/txtBlack"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/cairo"
                android:layout_below="@+id/text_product_price"
                android:layout_marginStart="@dimen/_5sdp"/>


        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>